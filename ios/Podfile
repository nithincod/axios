# Define the minimum platform version for your project
platform :ios, '13.0'

# Disable CocoaPods analytics to potentially reduce build latency
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Project configuration
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Method to fetch the Flutter root directory
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

# Include the Flutter pod helper script
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Flutter iOS pod setup
flutter_ios_podfile_setup

# Main target for the Runner app
target 'Runner' do
  use_frameworks!  # Required for dynamic frameworks support
  use_modular_headers!  # Enable modular headers

  # Install all Flutter-related pods
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Add the TensorFlowLiteC pod to your project
  pod 'TensorFlowLiteC', '~> 2.17.0'  # Make sure this matches the version in your dependencies

  # Target for running unit tests
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# Post-installation script to apply additional build settings
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # This is optional but can sometimes help with specific header issues
    target.build_configurations.each do |config|
      config.build_settings['ENABLE_BITCODE'] = 'NO'  # Disable Bitcode if it's causing issues
      config.build_settings['OTHER_CFLAGS'] = ['-fmodule-map-file=$(PODS_ROOT)/Headers/Public/TensorFlowLiteC/TensorFlowLiteC.modulemap']
    end
  end
end
